<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BonVoyage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorAccent">#0A2973</item>
        <item name="colorPrimary">#6EB6FF</item>
        <item name="colorOnSurface">#7098DA</item>

    </style>

    <style name="Theme.BonVoyage" parent="Base.Theme.BonVoyage" >
        <item name="colorAccent">#0A2973</item>
        <item name="colorPrimary">#6EB6FF</item>
        <item name="colorOnSurface">#7098DA</item>
        <item name="colorSurface">@color/white</item>

    </style>

    <style name="TextViewHeader">
        <item name="android:fontFamily">@font/vtb_book</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">64dp</item>
    </style>

    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/vtb_book</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:padding">@dimen/buttonPadding</item>
    </style>

    <style name="TransparentButtonButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/vtb_book</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">#7098DA</item>
    </style>

    <style name="ShapeAppearanceOverlay.TourPreview" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="borderWidth">3dp</item>
        <item name="background">@color/white</item>
    </style>

</resources>